<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="KiviPaperiSakset.Views.GameView"
             Background="#2c3e50">
    <Border Padding="30">
        <StackPanel Spacing="20" VerticalAlignment="Stretch">
            <!-- Wins counter -->
            <TextBlock Text="{Binding Wins, StringFormat='Voitot: {0}'}"
                       FontSize="24"
                       Foreground="White"
                       FontWeight="Bold"
                       Margin="10"/>
            
            <!-- Game title -->
            <TextBlock Text="🎮 Kivi–Paperi–Sakset"
                       FontSize="28"
                       Foreground="White"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,20"/>
            
            <!-- Choice display -->
            <TextBlock Text="{Binding ChoiceDisplay}"
                       FontSize="18"
                       Foreground="#ecf0f1"
                       TextAlignment="Center"
                       Margin="10,10"
                       MinHeight="30"/>
            
            <!-- Result -->
            <TextBlock Text="{Binding ResultText}"
                       FontSize="22"
                       Foreground="#f1c40f"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="10,10"
                       MinHeight="40"/>
            
            <!-- Spacer -->
            <StackPanel Height="20"/>
            
            <!-- Button grid -->
            <StackPanel Spacing="15" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="15" HorizontalAlignment="Center">
                    <Button Command="{Binding KiviCommand}"
                            Content="🪨 Kivi"
                            Padding="20,20"
                            FontSize="16"
                            Width="160"
                            Height="80"
                            Background="#3498db"
                            Foreground="White"
                            FontWeight="Bold"
                            CornerRadius="5"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"/>
                    
                    <Button Command="{Binding PaperiCommand}"
                            Content="📄 Paperi"
                            Padding="20,20"
                            FontSize="16"
                            Width="160"
                            Height="80"
                            Background="#9b59b6"
                            Foreground="White"
                            FontWeight="Bold"
                            CornerRadius="5"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"/>
                    
                    <Button Command="{Binding SaksetCommand}"
                            Content="✂️ Sakset"
                            Padding="20,20"
                            FontSize="16"
                            Width="160"
                            Height="80"
                            Background="#e74c3c"
                            Foreground="White"
                            FontWeight="Bold"
                            CornerRadius="5"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- Exit button -->
            <Button Command="{Binding ExitCommand}"
                    Content="Lopeta peli"
                    Padding="20,15"
                    FontSize="16"
                    Width="160"
                    Background="#e74c3c"
                    Foreground="White"
                    FontWeight="Bold"
                    CornerRadius="5"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</UserControl>
